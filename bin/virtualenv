#!/bin/bash

# Run virtualenv from the pristine system-wide Python, so that it can
# see the system site packages (in case these are requested with
# --system-site-packages).

for PYTHON in \
    /usr/bin/python2.7 \
    /Library/Frameworks/Python.framework/Versions/2.7/bin/python2.7

do
    if [ -x $PYTHON ]
    then
        exec $PYTHON ~/usr/src/virtualenv/virtualenv.py "$@"
    fi
done
