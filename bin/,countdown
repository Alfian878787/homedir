#!/usr/bin/env python

import datetime as dt

def till(name, date):
    days = (date - today).days
    weeks = days / 7.0
    print('{}: {} days = {:.1f} weeks'.format(name, days, weeks))

today = dt.date.today()
till('Grand Canyon April', dt.date(2019, 4, 23))
till('Grand Canyon October', dt.date(2019, 10, 21))
