[user]
name = Brandon Rhodes
email = brandon@rhodesmill.org

[alias]
amend = commit --amend
br = branch
ci = commit -v
co = checkout
d = diff
l = log --graph --pretty=oneline --abbrev-commit
lg = log -p
locate = ls-tree --name-only -r HEAD
patch = commit --patch -v
score = diff --shortstat
st = status
undo = reset --soft HEAD~1

[core]
pager = less -FRX
excludesfile = ~/.gitexcludes

[color]
branch = auto
diff = auto
interactive = auto
status = auto

[commit]
template = ~/.gitmessage.txt
[push]
	default = simple
