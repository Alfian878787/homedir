#!/bin/bash

scale=1.0

if [ "$(hostname)" = "bernardus" ]
then
    scale=1.2
fi

if [ "$(hostname)" = "odell" ]
then
    scale=1.5
fi

if [ "$(hostname)" = "old38" ]
then
    scale=1.25
fi

if command -v chromium-browser >/dev/null
then
    browser=chromium-browser
else
    browser=google-chrome
fi

exec $browser --enable-webgl --force-device-scale-factor="$scale" "$@"
